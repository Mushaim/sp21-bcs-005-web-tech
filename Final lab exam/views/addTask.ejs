<div class="container">
    <div class="row">
        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="task" class="form-label">Task:</label>
                <input type="text" class="form-control" id="task" name="task" placeholder="Enter task" required>
            </div>
    
            <div class="mb-3">
                <label for="assignedTo" class="form-label">Assign To:</label>
                <input type="text" class="form-control" id="assignedTo" name="assignedTo" placeholder="Assign to" required>
            </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
